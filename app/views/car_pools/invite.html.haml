.controls-row.row-width-1100
	.span5.col-md-offset-1
		-if current_user.students.present?
			= form_tag search_students_path, method: :get, remote: true do
				%dt Car pool:
				%dd
					= select_tag "car_pool", options_from_collection_for_select(@car_pools, "id", "name"), :prompt => "Please select"
				%dt Distance:
				%dd
					= text_field_tag :distance, nil
				%dt
				%dd
					= submit_tag "search", class: "btn btn-primary margin-top-3 margin-bottom-10 map-load"
			#student-search-map