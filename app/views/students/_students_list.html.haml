%h4 Student's
%table.table.table-hover
	%th
		name
	%th
		school
	%th
		standard
	%th
		car pool group
	%th
	%th
	- unless students.nil?
		- students.each do |student|
			%tr
				%td
					- if params[:controller] == 'students' && student.user.id == current_user.id
						= link_to student.name, edit_student_path(student.id), method: :get, remote: true
					- else
						= student.name
				%td
					- if student.school.present?
						= student.school.name 
					- else
						="-"
				%td
					= student.stardard
				%td
					- if  student.car_pool.present?
						= student.car_pool.name 
					- else
						="-"
				%td
					- if params[:controller] == 'students' && student.user.id == current_user.id
						= link_to "delete", delete_student_path(student.id), method: :post, remote: true
				%td
					- if student.invites.where(car_pool_invite: @car_pool_id).any?
						= "Invitation already send"
					- elsif params[:pre_action] == 'search_students' || params[:action] == 'invite_student' && !student.car_pool.present?
						= link_to 'invite', invite_student_path(student.id, @car_pool_id), remote: true