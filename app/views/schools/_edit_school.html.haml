= render partial: "layouts/flash"
.row
	.span5.col-md-offset-1
		= form_for(school, url: update_school_path(school.id, school), method: :post, remote: true) do |s|
			= render :partial => 'school_form', locals: { school: s }
			%dt
			%dd
				= s.button 'update', class: "btn btn-primary", disable_with: 'updating...'